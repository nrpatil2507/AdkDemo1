<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">

  <grid name="tax-grid" title="Taxes" model="com.axelor.sale.db.Tax">
    <field name="taxName" />
    <field name="taxRate" />
  </grid>

  <form name="tax-form" title="Tax" model="com.axelor.sale.db.Tax" width="mini">
    <panel title="Overview" colSpan="12">
      <field name="taxCode" colSpan="6" />
      <field name="taxName" colSpan="6"/>
      <field name="taxRate" />
    </panel>
  </form>

</object-views>
