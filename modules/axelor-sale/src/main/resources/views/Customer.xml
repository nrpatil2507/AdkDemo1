<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">

  <grid name="customer-grid" title="Customers" model="com.axelor.sale.db.Customer">
    <field name="firstName" />
    <field name="lastName" />
    <field name="area"/>
    <field name="city"/>
  <field name="contactno"/>
  </grid>

  <form name="customer-form" title="Customer" model="com.axelor.sale.db.Customer">
    <panel title="Overview" colSpan="8" css="panel-red">
        <field name="firstName"/>
        <field name="lastName"/>
        <field name="area"/>
        <field name="city"/>
        <field name="contactno"/>
        <field name="email"/>
    </panel>
  </form>

</object-views>
