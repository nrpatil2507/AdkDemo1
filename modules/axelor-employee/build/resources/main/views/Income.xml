<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">

  <grid name="income-grid" title="incomes" model="com.axelor.employee.db.Income">
    <field name="employee"></field>
    <field name="amount"></field>
    <field name="paydate"></field>
    <field name="paymentType"></field>
  </grid>

  <form name="income-form" title="incomes" model="com.axelor.employee.db.Income">

    <panel-related field="employees" >
      <field name="fname" />
      <field name="mname" />
      <field name="lname" />
      <field name="address" />
      <field name="status" />
    </panel-related>
    <panel title="Overview" colSpan="12">
      <field name="amount" />
      <field name="paymentType" />
      <field name="paydate" type="date">
      </field>
    </panel>
    <panel sidebar="true">
      <field name="createdOn" />
      <field name="createdBy" />
      <field name="updatedOn" />
      <field name="updatedBy" />
    </panel>
  </form>

</object-views>
