<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">

  <grid name="person-grid" title="Contact"
    model="com.axelor.contact.db.Person">
    <field name="fullName" />
    <field name="email" />
    <field name="phone" />
    <field name="dateOfBirth" />
  </grid>

  <form name="person-form" title="Contact"
    model="com.axelor.contact.db.Person">
    <panel title="Overview">
      <field name="fullName" readonly="false">
        <editor>
          <field name="title" colSpan="3"/>
          <field name="firstName" colSpan="4"/>
          <field name="lastName" colSpan="5"/>
        </editor>
      </field>
      <field name="dateOfBirth" />
    </panel>
    <panel title="About me">
        <field name="notes" showTitle="false" colSpan="12"/>
    </panel>
    <panel-related field="addresses"
      form-view="address-form-popup">
        <field name="street"/>
        <field name="area"/>
        <field name="city"/>
        <field name="state"/>
        <field name="zip"/>
        <field name="country"/>
    </panel-related>
     <panel-related field="contacts"
      form-view="contact-form-popup">
       <field name="phonetype"/>
       <field name="service_provider"/>
       <field name="contactno"/>
    </panel-related>
      <panel-related field="emails"
      form-view="email-form-popup">
       <field name="email"/>
       <field name="primary"/>
       <field name="optOut"/>
       <field name="invalid"/>

    </panel-related>

    <panel sidebar="true">
      <field name="createdOn"/>
      <field name="createdBy"/>
      <field name="updatedOn"/>
      <field name="updatedBy"/>
    </panel>
      <panel sidebar="true" title="Extra">
      <field name="company"/>
      <field name="circles" widget="TagSelect"/>
    </panel>
  </form>

  <form name="address-form-popup" title="Address"
    model="com.axelor.contact.db.Address">
    <panel title="Overview">
      <field name="street" />
      <field name="area" />
      <field name="city" />
      <field name="zip" />
      <field name="state" />
      <field name="country" />
    </panel>
  </form>
  <form name="contact-form-popup" title="Contact"
    model="com.axelor.contact.db.Contact">
    <panel title="Contact-Detail">
       <field name="phonetype"/>
       <field name="service_provider"/>
       <field name="contactno"/>
    </panel>
  </form>
   <form name="email-form-popup" title="Email"
    model="com.axelor.contact.db.Email">
    <panel title="Email-Detail">
       <field name="email"/>
       <field name="primary"/>
       <field name="optOut"/>
       <field name="invalid"/>
    </panel>
  </form>

</object-views>
